<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_blue_bright"
    tools:context=".ButtonFragment">
    <TextView
        android:id="@+id/FB_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FC_button_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="7"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="8"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="9"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_multipl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="X"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FC_button_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="6"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="4"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="/"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FC_button_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="3"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="2"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="1"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="+"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/FC_button_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="0"
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="."
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_equal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="="
            android:textSize="15sp" />

        <Button
            android:id="@+id/FC_button_subtraction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="-"
            android:textSize="15sp" />

    </LinearLayout>

    <Button
        android:id="@+id/FC_button_cline"
        android:layout_width="200dp"
        android:layout_height="40dp"

        android:text="CE" />



</LinearLayout>